{
  "manifest_version": 3,
  "name": "Highlight Keeper",
  "version": "1.2.0",
  "description": "Highlight sentences on web pages and save notes",
  "icons": {
    "16": "public/icons/logo.png",
    "48": "public/icons/logo.png",
    "128": "public/icons/logo.png"
  },
  "permissions": ["activeTab", "sidePanel"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_icon": {
      "16": "public/icons/logo.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.js"],
      "css": ["src/content/content.css"]
    }
  ],
  "side_panel": {
    "default_path": "src/side-panel/index.html"
  },
  "background": {
    "service_worker": "src/background/index.js",
    "type": "module"
  },
  "commands": {
    "execute_highlight": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "Alt+S"
      },
      "description": "Highlight selected text"
    },
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+A",
        "mac": "Alt+A"
      }
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["src/**/*.js", "public/icons/*.svg", "public/icons/*.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
